<%- include("partials/header") -%>
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Vendor Coordination</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lucide/0.263.0/lucide.min.js">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #111827; /* bg-gray-900 */
        }
        .dark body {
            background-color: #111827;
        }
        .gradient-bg {
            background: linear-gradient(135deg, #4f46e5 0%, #5b21b6 100%);
        }
        .card {
            background-color: #1f2937; /* bg-gray-800 */
            border-radius: 0.75rem;
            border: 1px solid #374151; /* border-gray-700 */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .icon-circle {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            border-radius: 50%;
        }
    </style>
</head>
<body class="antialiased text-gray-200">

    <div class="min-h-screen">
        <!-- Header Section -->
        <header class="gradient-bg text-white shadow-lg">
            <div class="container mx-auto px-6 py-12 text-center">
                <h1 class="text-4xl md:text-5xl font-bold tracking-tight">Annual Charity Gala 2025</h1>
                <p class="mt-4 text-lg md:text-xl opacity-90">Vendor Coordination Hub</p>
                <div class="mt-6 flex justify-center items-center space-x-6">
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                        <span>Saturday, November 22, 2025</span>
                    </div>
                    <div class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                        <span>The Grand Ballroom, Gurugram</span>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="container mx-auto px-6 py-12">
            
            <!-- Welcome Message -->
            <div class="text-center mb-12">
                <h2 class="text-3xl font-semibold text-white">Welcome, Valued Vendors!</h2>
                <p class="mt-3 max-w-3xl mx-auto text-lg text-gray-400">We're thrilled to partner with you for this year's gala. This page contains all the essential information to ensure a smooth and successful event for everyone. Please review it carefully.</p>
            </div>

            <!-- Key Information Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
                <div class="card p-6">
                    <div class="flex items-start">
                        <div class="icon-circle bg-blue-900/50 text-blue-400">
                           <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"></path><polyline points="12 6 12 12 16 14"></polyline></svg>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-xl font-semibold text-white">Critical Timings</h3>
                            <p class="mt-2 text-gray-400"><strong class="font-medium text-gray-200">Vendor Setup:</strong> 1:00 PM - 4:00 PM</p>
                            <p class="mt-1 text-gray-400"><strong class="font-medium text-gray-200">Event Start:</strong> 6:00 PM</p>
                            <p class="mt-1 text-gray-400"><strong class="font-medium text-gray-200">Event End:</strong> 11:00 PM</p>
                            <p class="mt-1 text-gray-400"><strong class="font-medium text-gray-200">Breakdown:</strong> 11:15 PM - 12:30 AM</p>
                        </div>
                    </div>
                </div>

                <div class="card p-6">
                    <div class="flex items-start">
                         <div class="icon-circle bg-green-900/50 text-green-400">
                             <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="8.5" cy="7" r="4"></circle><polyline points="17 11 19 13 23 9"></polyline></svg>
                         </div>
                         <div class="ml-4">
                            <h3 class="text-xl font-semibold text-white">Primary Contact</h3>
                            <p class="mt-2 text-gray-400"><strong class="font-medium text-gray-200">Anjali Sharma</strong></p>
                            <p class="mt-1 text-gray-400">Event Coordinator</p>
                            <p class="mt-1 text-gray-400"><strong>Phone:</strong> +91 98765 43210</p>
                            <p class="mt-1 text-gray-400"><strong>Email:</strong> anjali.s@charitygala.org</p>
                         </div>
                    </div>
                </div>

                <div class="card p-6">
                     <div class="flex items-start">
                         <div class="icon-circle bg-red-900/50 text-red-400">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>
                         </div>
                         <div class="ml-4">
                            <h3 class="text-xl font-semibold text-white">Venue & Emergency</h3>
                            <p class="mt-2 text-gray-400"><strong class="font-medium text-gray-200">Venue Manager:</strong> Rahul Verma</p>
                            <p class="mt-1 text-gray-400"><strong>On-site Security:</strong> +91 99887 76655</p>
                             <p class="mt-1 text-gray-400"><strong>First-Aid Station:</strong> Lobby Area</p>
                         </div>
                    </div>
                </div>
            </div>

            <!-- Schedule and Logistics -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
                <!-- Event Day Schedule -->
                <div class="card p-8">
                    <h3 class="text-2xl font-semibold text-white mb-6 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-7 h-7 mr-3 text-indigo-400"><path d="M5 22h14"></path><path d="M5 2h14"></path><path d="M17 22v-4H7v4"></path><path d="M17 2v4H7V2"></path></svg>
                        Event Day Timeline
                    </h3>
                    <ul class="space-y-4 border-l-2 border-indigo-800 pl-6">
                        <li class="relative">
                            <span class="absolute -left-[1.6rem] top-1 flex h-6 w-6 items-center justify-center rounded-full bg-indigo-500 text-white font-bold text-sm">1</span>
                            <p class="font-semibold text-gray-200">1:00 PM - Load-in Begins</p>
                            <p class="text-gray-400">Use designated vendor entrance at the rear of the building. Carts available.</p>
                        </li>
                        <li class="relative">
                            <span class="absolute -left-[1.6rem] top-1 flex h-6 w-6 items-center justify-center rounded-full bg-indigo-500 text-white font-bold text-sm">2</span>
                            <p class="font-semibold text-gray-200">3:30 PM - Vendor Briefing</p>
                            <p class="text-gray-400">Mandatory meeting at the main stage for final instructions.</p>
                        </li>
                         <li class="relative">
                            <span class="absolute -left-[1.6rem] top-1 flex h-6 w-6 items-center justify-center rounded-full bg-indigo-500 text-white font-bold text-sm">3</span>
                            <p class="font-semibold text-gray-200">4:00 PM - Setup Complete</p>
                            <p class="text-gray-400">All booths must be ready. Aisles clear. Personal vehicles moved to vendor parking.</p>
                        </li>
                        <li class="relative">
                            <span class="absolute -left-[1.6rem] top-1 flex h-6 w-6 items-center justify-center rounded-full bg-indigo-500 text-white font-bold text-sm">4</span>
                            <p class="font-semibold text-gray-200">4:00 PM - 5:30 PM - Vendor Break</p>
                            <p class="text-gray-400">Meals will be provided in the vendor lounge (Green Room).</p>
                        </li>
                        <li class="relative">
                             <span class="absolute -left-[1.6rem] top-1 flex h-6 w-6 items-center justify-center rounded-full bg-indigo-500 text-white font-bold text-sm">5</span>
                            <p class="font-semibold text-gray-200">6:00 PM - Doors Open</p>
                            <p class="text-gray-400">Event officially begins. Let's make it a great night!</p>
                        </li>
                         <li class="relative">
                            <span class="absolute -left-[1.6rem] top-1 flex h-6 w-6 items-center justify-center rounded-full bg-indigo-500 text-white font-bold text-sm">6</span>
                            <p class="font-semibold text-gray-200">11:15 PM - Breakdown Starts</p>
                            <p class="text-gray-400">Please begin breakdown only after all guests have departed the main hall.</p>
                        </li>
                    </ul>
                </div>
                
                <!-- Logistics and Map -->
                <div class="card p-8">
                    <h3 class="text-2xl font-semibold text-white mb-6 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-7 h-7 mr-3 text-teal-400"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                        Load-in & Parking
                    </h3>
                    <p class="text-gray-400 mb-4">Follow the "Vendor Access" signs upon arrival. Unload at the designated zone and then move your vehicle immediately.</p>
                    <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden border-2 border-gray-700">
                        <!-- Placeholder for map -->
                        <img src="https://placehold.co/600x400/1f2937/d1d5db?text=Venue+Logistics+Map" alt="Venue Logistics Map" class="w-full h-full object-cover">
                    </div>
                    <div class="mt-6">
                        <p class="font-semibold text-gray-200">1. Unloading Zone (Rear Entrance):</p>
                        <p class="text-gray-400 text-sm mb-3">15-minute time limit. Please do not leave vehicles unattended.</p>
                        <p class="font-semibold text-gray-200">2. Vendor Parking (Lot C):</p>
                        <p class="text-gray-400 text-sm mb-3">After unloading, all vendor vehicles must be moved to Lot C. Parking passes must be displayed on dashboard.</p>
                        <p class="font-semibold text-gray-200">3. Check-in Desk:</p>
                        <p class="text-gray-400 text-sm">Located just inside the loading bay. Receive your welcome packet and booth assignment here.</p>
                    </div>
                </div>
            </div>
            
            <!-- Rules and Checklist -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
                 <div class="card p-8">
                    <h3 class="text-2xl font-semibold text-white mb-6 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-7 h-7 mr-3 text-amber-400"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"></path><path d="m9 12 2 2 4-4"></path></svg>
                        Vendor Checklist
                    </h3>
                     <ul class="space-y-3 text-gray-300">
                         <li class="flex items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-3 text-green-400"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>Signed Vendor Agreement</li>
                         <li class="flex items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-3 text-green-400"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>Proof of Insurance (if applicable)</li>
                         <li class="flex items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-3 text-green-400"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>All necessary permits/licenses</li>
                         <li class="flex items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-3 text-green-400"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>Professional signage and branding materials</li>
                         <li class="flex items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-3 text-green-400"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>Extension cords and power strips</li>
                         <li class="flex items-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-3 text-green-400"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>Staff badges/credentials</li>
                     </ul>
                </div>
                <div class="card p-8">
                    <h3 class="text-2xl font-semibold text-white mb-6 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-7 h-7 mr-3 text-rose-400"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline><line x1="17" y1="7" x2="7" y2="17"></line><line x1="7" y1="7" x2="17" y2="17"></line></svg>
                        Rules & Regulations
                    </h3>
                    <ul class="space-y-3 text-gray-300 list-disc list-inside">
                        <li>All booth displays must stay within the allocated 10x10 ft space.</li>
                        <li>No open flames or hazardous materials are permitted.</li>
                        <li>Vendors are responsible for cleaning their space post-event.</li>
                        <li>Do not block aisles or emergency exits.</li>
                        <li>All staff must be professional and courteous to guests and other vendors.</li>
                        <li>Music or audio from booths must be kept at a reasonable volume.</li>
                    </ul>
                </div>
            </div>

            <!-- Confirmation Section -->
            <div class="bg-gray-800 rounded-lg shadow-lg p-8 md:p-12 border border-gray-700">
                <div class="text-center">
                    <h2 class="text-2xl md:text-3xl font-semibold text-white">Ready for the Event?</h2>
                    <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-400">Please confirm that you have read and understood all the information on this page. This helps us ensure we are all aligned for a fantastic event.</p>
                </div>
                <div class="mt-8 max-w-lg mx-auto">
                    <form id="confirmationForm">
                        <div class="mb-4">
                            <label for="vendorName" class="block text-sm font-medium text-gray-300 mb-1">Business/Vendor Name</label>
                            <input type="text" id="vendorName" name="vendorName" required class="w-full px-4 py-2 bg-gray-700 border border-gray-600 text-white rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition placeholder-gray-400">
                        </div>
                        <div class="mb-6">
                            <label for="contactPerson" class="block text-sm font-medium text-gray-300 mb-1">Primary Contact Name</label>
                            <input type="text" id="contactPerson" name="contactPerson" required class="w-full px-4 py-2 bg-gray-700 border border-gray-600 text-white rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 transition placeholder-gray-400">
                        </div>
                        <div class="flex items-start mb-6">
                            <div class="flex items-center h-5">
                                <input id="acknowledgment" name="acknowledgment" type="checkbox" required class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 bg-gray-700 border-gray-600 rounded">
                            </div>
                            <div class="ml-3 text-sm">
                                <label for="acknowledgment" class="font-medium text-gray-300">I acknowledge that I have read and understood the coordination details.</label>
                            </div>
                        </div>
                        <button type="submit" class="w-full gradient-bg text-white font-bold py-3 px-6 rounded-md shadow-md hover:opacity-90 transition-opacity duration-300 text-lg">
                            Confirm Acknowledgment
                        </button>
                    </form>
                    <div id="confirmationMessage" class="hidden mt-6 p-4 text-center text-green-300 bg-green-900/50 rounded-md border border-green-700">
                        Thank you! Your acknowledgment has been received. We look forward to seeing you!
                    </div>
                </div>
            </div>

        </main>
    </div>

    <script>
        // Simple script for the confirmation form
        const form = document.getElementById('confirmationForm');
        const message = document.getElementById('confirmationMessage');

        form.addEventListener('submit', function(event) {
            event.preventDefault();
            
            // In a real application, you would send this data to a server.
            // For this example, we'll just show a success message.
            const vendorName = document.getElementById('vendorName').value;
            if (vendorName) {
                form.classList.add('hidden');
                message.classList.remove('hidden');
                message.innerHTML = `Thank you, <strong class="font-semibold">${vendorName}</strong>! Your acknowledgment has been received. We look forward to seeing you!`;
            }
        });
    </script>
</body>
</html>


<%- include("partials/footer") -%>